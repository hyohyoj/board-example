<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hyo.boardexample.mapper.FileMapper">

    <insert id="insertFile" parameterType="hyo.boardexample.domain.FileInfo">
        INSERT INTO file_table(
             board_no
            ,original_name
            ,save_name
            ,size
            ,delete_yn
            ,delete_date
        ) VALUES
<!--            <foreach collection="fileList" item="file" separator=","></foreach>-->
             #{boardNo}
            ,#{originalName}
            ,#{saveName}
            ,#{size}
            ,'N'
            ,NULL
        (
        #{user_id},
        #{user_pw}
        )
    </insert>

    <select id="selectFileDetail" parameterType="Long" resultType="hyo.boardexample.domain.FileInfo">
        SELECT
             file_no
            ,board_no
            ,original_name
            ,save_name
            ,size
            ,delete_yn
            ,insert_date
            ,delete_date
        FROM
            file_table
        WHERE
            file_no = #{fileNo}
        AND
            delete_yn = 'N'
    </select>

    <update id="deleteFile" parameterType="long">
        UPDATE file_table
        SET
             delete_yn = 'Y'
            ,delete_time = CURRENT_TIMESTAMP
        WHERE
            board_no = #{boardNo}
    </update>

    <select id="selectFileList" parameterType="long" resultType="hyo.boardexample.domain.FileInfo">
        SELECT
             file_no
            ,board_no
            ,original_name
            ,save_name
            ,size
            ,delete_yn
            ,insert_date
            ,delete_date
        FROM
            file_table
        WHERE
            delete_yn = 'N'
        AND
            board_no = #{boardNo}
    </select>

    <select id="selectFileTotalCount" parameterType="long" resultType="int">
        SELECT
            COUNT(*)
        FROM
            file_table
        WHERE
            delete_yn = 'N'
        AND
            board_no = #{boardNo}
    </select>

</mapper>